---
import { Tooltips } from "astro-tooltips";
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Favicon estándar -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/web-app-manifest-192x192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="512x512"
      href="/web-app-manifest-512x512.png"
    />

    <!-- Favicon para iOS -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Web App Manifest -->
    <link rel="manifest" href="/site.webmanifest" />

    <meta name="generator" content={Astro.generator} />
    <title>Gerard Camí - Desarrollador Frontend</title>
    <meta
      name="description"
      content="Desarrollador Frontend especializado en React"
    />
    <link rel="canonical" href="https://gerardcami.com/" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Gerard Camí - Desarrollador Frontend" />
    <meta
      property="og:description"
      content="Desarrollador Frontend especializado en React"
    />
    <meta property="og:image" content="https://www.gerardcami.com/og.jpg" />
    <meta property="og:url" content="https://www.gerardcami.com" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Gerard Camí" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Gerard Camí - Desarrollador Frontend" />
    <meta
      name="twitter:description"
      content="Desarrollador Frontend especializado en React."
    />
    <meta name="twitter:image" content="https://www.gerardcami.com/og.jpg" />
    <meta name="twitter:url" content="https://www.gerardcami.com" />
    <meta name="twitter:site" content="@gerardcamig" />
    <meta name="twitter:creator" content="@gerardcamig" />

    <link rel="stylesheet" href="https://use.typekit.net/add6mjw.css" />
    <Tooltips interactive={false} delay={[0, 0]} />

    <!-- Schema Markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Gerard Camí",
        "url": "https://gerardcami.com",
        "jobTitle": "Desarrollador Frontend",
        "knowsAbout": [
          "React",
          "JavaScript",
          "CSS",
          "UI/UX",
          "Next.js",
          "TypeScript"
        ],
        "sameAs": [
          "https://github.com/tu-usuario",
          "https://linkedin.com/in/tu-perfil",
          "https://twitter.com/tu-usuario"
        ]
      }
    </script>
  </head>

  <body class="bg-[#161616]">
    <slot />
    <Analytics />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
